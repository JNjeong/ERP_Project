<script type="text/javascript">
	function login(f){
		if(f.comcode_code.value == ""){
			alert("회사 코드를 입력해주세요!")
			f.comcode_code.focus();
		}else if(f.admin_id.value == ""){
			alert("ID를 입력해주세요!");
			f.admin_id.focus();
		}else if(f.admin_pw.value == ""){
			f.admin_pw.focus();
		}else {
			f.submit();
		}
	}
	
	function searchcode(){
		window.open("${pageContext.request.contextPath}/login/searchcode", "_blank", "scrollbars=yes, top=200, left=500, width=300, height=300");
	}
</script>
